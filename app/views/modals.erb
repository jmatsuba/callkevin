<!-- Modal -->
<div class="modal fade" id="request" tabindex="-1" role="dialog" aria-labelledby="requestmodel" aria-hidden="true">
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="requestmodel">Request Form</h4>
    </div>
    <div class="modal-body">

        <form class="form-horizontal" method="post" action="/kevinrequest/new">
        <div class="form-group">
          <label for="SongName" class="col-sm-2 control-label">Issue Title</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="issue_title" placeholder="Git Workflows Help">
          </div>
        </div>
        <div class="form-group">
          <label for="Artist" class="col-sm-2 control-label">Issue Description</label>
          <div class="col-sm-10">
            <input type="textarea" class="form-control"  placeholder="Jody pushed changes and everything is fucked, how do we fix it? make it better kevin" name="issue_desc" >
          </div>
        </div>
        <div class="form-group">
          <label for="URL" class="col-sm-2 control-label">Offered Incentive</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="A beer? Sexual Favors?"  name="incentive">
          </div>
        </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <input type="submit" value="submit" class="btn btn-primary"></input>
      </form>   
    </div>